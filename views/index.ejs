<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Feature Flags</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
    />
  </head>
  <body class="container mt-4">
    <h2>Feature Flags</h2>
    <a href="/flags/new" class="btn btn-primary">Create New Flag</a>
    <table class="table table-bordered mt-3">
      <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% flags.forEach(flag => { %>
        <tr>
          <td><%= flag.name %></td>
          <td><%= flag.isEnabled ? 'Enabled' : 'Disabled' %></td>
          <td>
            <a href="/flags/edit/<%= flag._id %>" class="btn btn-warning btn-sm"
              >Edit</a
            >
            <form
              action="/flags/delete/<%= flag._id %>"
              method="POST"
              class="d-inline"
            >
              <button type="submit" class="btn btn-danger btn-sm">
                Delete
              </button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
